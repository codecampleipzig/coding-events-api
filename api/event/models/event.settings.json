{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "name": "Event"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "details": {
      "type": "text"
    },
    "date": {
      "type": "datetime",
      "required": true
    },
    "location": {
      "type": "string",
      "required": false
    },
    "host": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "hosted_events"
    },
    "attendees": {
      "collection": "attendance",
      "via": "event"
    },
    "avatar": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
